{
  "compilerOptions": {
    "target": "ES2021",
    "module": "CommonJS",
    "baseUrl": "./src",
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "types": ["jest"],
    "paths": {
      "@config/*": ["config/*"],
      "@modules/*": ["modules/*"],
      "@middlewares/*": ["middlewares/*"],
      "@utils/*": ["utils/*"]
    },
    "esModuleInterop": true /* Skip type checking all .d.ts files. */,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "typeRoots": [
      "node_modules/@types" // Asegúrate de que esta línea esté presente
    ]
  },
  "exclude": ["node_modules", "jest.config.ts"]
}
